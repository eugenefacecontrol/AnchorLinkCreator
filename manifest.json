{
    "name": "Anchor Link Creator",
    "description": "This extension will help to create Anchor Links",
    "version": "1.0",
    "background": {
        "persistent": false,
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html",
        "default_title": "Anchor Link Creator"
    },
    "commands": {
        "Get-AnchorLink": {
            "suggested_key": {
                "default": "Shift+Alt+R",
                "linux": "Ctrl+Shift+R"
            },
            "description": "Send a 'Get-AnchorLink' event to the extension",
            "global": false
        }
    },
    "permissions": [
        "activeTab"
    ],
    "icons": {
        "64": "icon.png"
    },
    "manifest_version": 2
}